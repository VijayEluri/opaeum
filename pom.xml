<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
		<groupId>org.sonatype.oss</groupId>
		<artifactId>oss-parent</artifactId>
		<version>5</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.opeum</groupId>
	<artifactId>opeum-root</artifactId>
	<packaging>pom</packaging>
	<name>Opeum-Root</name>
	<version>1.0.0-SNAPSHOT</version>
	<description>Objects and Processes through Executable Unified Models</description>
	<url>http://github.com/opeum</url>
	<properties>
		<opeum.version>1.0.0-SNAPSHOT</opeum.version>
		<tycho-version>0.12.0</tycho-version>
		<forceContextQualifier>cm</forceContextQualifier>
	</properties>
	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	<scm>
		<connection>scm:git:git@github.com:nakeduml/nakeduml.git</connection>
		<developerConnection>scm:git:git@github.com:nakeduml/nakeduml.git</developerConnection>
		<url>scm:git:git@github.com:nakeduml/nakeduml.git</url>
	</scm>
	<repositories>
		<repository>
			<id>repository.central.org</id>
			<name>Central Repository</name>
			<url>https://repository.sonatype.org/content/repositories/central/</url>
		</repository>
	</repositories>
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>tycho-source-plugin</artifactId>
					<version>${tycho-version}</version>
					<executions>
						<execution>
							<id>plugin-source</id>
							<goals>
								<goal>plugin-source</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>target-platform-configuration</artifactId>
					<version>${tycho-version}</version>
					<configuration>
						<resolver>p2</resolver>
						<environments>
							<environment>
								<os>linux</os>
								<ws>gtk</ws>
								<arch>x86</arch>
							</environment>
							<environment>
								<os>linux</os>
								<ws>gtk</ws>
								<arch>x86_64</arch>
							</environment>
							<environment>
								<os>win32</os>
								<ws>win32</ws>
								<arch>x86</arch>
							</environment>
							<environment>
								<os>win32</os>
								<ws>win32</ws>
								<arch>x86_64</arch>
							</environment>
							<environment>
								<os>macosx</os>
								<ws>cocoa</ws>
								<arch>x86_64</arch>
							</environment>
						</environments>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<modules>
		<module>opeum-bpmn2</module>
		<module>opeum-compilation</module>
		<module>opeum-eclipse</module>
		<module>opeum-linkage</module>
		<module>opeum-metamodels</module>
		<module>opeum-modeler</module>
		<module>opeum-runtime</module>
		<module>opeum-uimodeler</module>
		<!--module>opeum-tests/jbpmtestintegration/jbpmtestintegration-generator</module -->
	</modules>
</project>
