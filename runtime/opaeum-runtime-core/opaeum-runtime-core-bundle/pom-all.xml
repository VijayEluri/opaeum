		<version>1.0.2.3-SNAPSHOT</version>
		<relativePath>../../../releng/org.opaeum.runtime.core.releng/pom.xml</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.opaeum</groupId>
	<artifactId>opaeum-runtime-core-bundle</artifactId>
	<version>1.0.2.3-SNAPSHOT</version>
	<packaging>bundle</packaging>
	<name>Opaeum Core Runtime Dependencies</name>
	<url>http://github.com/opaeum</url>
