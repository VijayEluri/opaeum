<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>
		<property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
		<property name="hibernate.connection.url">jdbc:hsqldb:mem:${workspace.name}</property>
		<property name="hibernate.connection.username">sa</property>
		<property name="hibernate.connection.password"></property>
<!--		<property name="hibernate.hbm2ddl.auto">create-drop</property>-->
		<property name="hibernate.format_sql">false</property>
		<property name="hibernate.show_sql">false</property>
		
		

		<mapping class="org.nakeduml.runtime.bpm.TaskRequest" />
		<mapping class="org.nakeduml.runtime.bpm.ParticipationInTask" />
		<mapping class="org.nakeduml.runtime.bpm.AbstractRequest" />
		<mapping class="org.nakeduml.runtime.bpm.Participation" />
		<mapping class="org.nakeduml.runtime.bpm.ParticipationInRequest" />
		<mapping class="org.nakeduml.runtime.bpm.ProcessRequest" />
		<mapping package="org.nakeduml.runtime.bpm.util.hibernate.adaptor" />
		<mapping class="org.drools.persistence.info.SessionInfo" />
		<mapping class="org.jbpm.persistence.processinstance.ProcessInstanceInfo" />
		<mapping class="org.jbpm.persistence.processinstance.ProcessInstanceEventInfo" />
		<mapping class="org.drools.persistence.info.WorkItemInfo" />
		<mapping class="org.nakeduml.runtime.domain.AbstractRequest"/>
		<mapping class="org.nakeduml.runtime.domain.TaskRequest"/>
		<mapping class="org.nakeduml.runtime.domain.ProcessRequest"/>


		<event type="save-update">
			<listener class="org.nakeduml.hibernate.domain.SaveOrUpdateEventListener" />
		</event>
		<event type="save">
			<listener class="org.nakeduml.hibernate.domain.SaveEventListener" />
		</event>
		<event type="create">
			<listener class="org.nakeduml.hibernate.domain.PersistEventListener" />
		</event>
		<event type="create-onflush">
			<listener class="org.nakeduml.hibernate.domain.PersistOnFlushEventListener" />
		</event>
		<event type="flush-entity">
			<listener class="org.nakeduml.hibernate.domain.FlushEntityListener" />
			<listener class="org.nakeduml.hibernate.domain.EventDispatcher" />
		</event>
		<event type="flush">
			<listener class="org.nakeduml.hibernate.domain.EventDispatcher" />
		</event>
		<event type="post-load">
			<listener class="org.nakeduml.hibernate.domain.EventDispatcher" />
		</event>
		<event type="pre-insert">
			<listener class="org.nakeduml.hibernate.domain.EventDispatcher" />
		</event>
	</session-factory>
</hibernate-configuration>