<?xml version="1.0" encoding="UTF-8"?>
<!-- Persistence deployment descriptor for dev profile -->
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="opeum-runtime-bpm-hibernate">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/cmDatasource</jta-data-source>
 
		<class>org.opeum.runtime.bpm.businesscalendar.WorkDay</class>
		<class>org.opeum.runtime.bpm.TaskRequest</class>
		<class>org.opeum.runtime.bpm.ParticipationInTask</class>
		<class>org.opeum.runtime.bpm.businesscalendar.TimeOfDay</class>
		<class>org.opeum.runtime.bpm.AbstractRequest</class>
		<class>org.opeum.runtime.bpm.Participation</class>
		<class>org.opeum.runtime.bpm.businesscalendar.OnceOffHoliday</class>
		<class>org.opeum.runtime.bpm.ParticipationInRequest</class>
		<class>org.opeum.runtime.bpm.businesscalendar.RecurringHoliday</class>
		<class>com.rorotika.cm.audit.NetworkElementAuditEntry</class>
		<class>org.opeum.runtime.bpm.ProcessRequest</class>
		<class>org.opeum.runtime.bpm.businesscalendar.BusinessCalendar</class>
		<class>org.opeum.runtime.bpm.util</class>
		<class>org.jbpm.persistence.processinstance.ProcessInstanceInfo</class>
		<class>org.jbpm.persistence.processinstance.ProcessInstanceEventInfo</class>
		<class>org.opeum.hibernate.domain.EventOccurrence</class>
		<class>org.opeum.audit.AuditEntry</class>
		<class>org.opeum.audit.AuditEntryPropertyChange</class>
		<class>org.opeum.audit.EntityPropertyChange</class>
		<class>org.opeum.audit.PropertyChange</class>
		<class>org.opeum.audit.StringPropertyChange</class>
		<class>org.opeum.audit.BooleanPropertyChange</class>
		<class>org.opeum.audit.DateTimePropertyChange</class>
		<class>org.opeum.audit.IntegerPropertyChange</class>
		<class>org.opeum.audit.FloatingPointPropertyChange</class>
		<class>org.opeum.audit.NullPropertyChange</class>
		<properties>
			<property name="hibernate.dialect" value="com.rorotika.cm.ria.hql.CmPostgreSQLDialect" />
<!--			<property name="hibernate.hbm2ddl.auto" value="update" />-->
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" />
			<property name="jboss.entity.manager.factory.jndi.name"
				value="java:/EntityManagerFactory" />
			<property name="hibernate.cache.use_second_level_cache"
				value="false" />
			<property name="hibernate.cache.use_query_cache" value="true" />
			<property name="hibernate.default_batch_fetch_size" value="8" />
			<property name="hibernate.order_updates" value="true" />
			<property name="hibernate.order_inserts" value="true" />
			<property name="hibernate.jdbc.batch_size" value="20" />
			<property name="hibernate.max_fetch_depth" value="1" />
			<property name="jboss.entity.manager.factory.jndi.name" value="java:/EntityManagerFactory"/>
			<property name="hibernate.archive.autodetection" value="false" />

			<property name="hibernate.ejb.event.post-load" value="org.hibernate.ejb.event.EJB3PostLoadEventListener,org.opeum.audit.AuditListener" />
			<property name="hibernate.ejb.event.post-insert"
				value="org.hibernate.ejb.event.EJB3PostInsertEventListener,org.opeum.audit.AuditListener" />
			<property name="hibernate.ejb.event.post-update"
				value="org.hibernate.ejb.event.EJB3PostUpdateEventListener,org.opeum.audit.AuditListener" />
			<property name="hibernate.ejb.event.flush" value="org.opeum.audit.AuditListener" />
		</properties>
	</persistence-unit>
</persistence>
