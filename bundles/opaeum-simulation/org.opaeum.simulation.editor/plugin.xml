<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<!--
-->

<plugin>

   <extension
         point="org.eclipse.core.runtime.applications"
         id="SimulationEditorAdvisorApplication">
      <application>
         <run class="org.opaeum.simulation.simulation.presentation.SimulationEditorAdvisor$Application"/>
      </application>
   </extension>

   <extension point="org.eclipse.ui.perspectives">
      <perspective
            name="%_UI_Perspective_label"
            class="org.opaeum.simulation.simulation.presentation.SimulationEditorAdvisor$Perspective"
            id="org.opaeum.simulation.simulation.presentation.SimulationEditorAdvisorPerspective">
      </perspective>
   </extension>

   <extension point="org.eclipse.ui.commands">
      <command
            name="%_UI_Menu_OpenURI_label"
            description="%_UI_Menu_OpenURI_description"
            categoryId="org.eclipse.ui.category.file"
            id="org.opaeum.simulation.simulation.presentation.SimulationEditorAdvisorOpenURICommand"/>
   </extension>


   <extension point="org.eclipse.ui.actionSets">
      <actionSet
            label="%_UI_SimulationEditorAdvisor_ActionSet_label"
            visible="true"
            id="SimulationEditorAdvisorActionSet">
         <action
               label="%_UI_Menu_About_label"
               class="org.opaeum.simulation.simulation.presentation.SimulationEditorAdvisor$AboutAction"
               menubarPath="help/additions"
               id="org.opaeum.simulation.simulation.presentation.SimulationEditorAdvisorAboutAction"/>
         <action
               label="%_UI_Menu_OpenURI_label"
               definitionId="org.opaeum.simulation.simulation.presentation.SimulationEditorAdvisorOpenURICommand"
               class="org.opaeum.simulation.simulation.presentation.SimulationEditorAdvisor$OpenURIAction"
               menubarPath="file/additions"
               id="org.opaeum.simulation.simulation.presentation.SimulationEditorAdvisorOpenURIAction"/>
      </actionSet>
   </extension>

   <extension point="org.eclipse.ui.actionSets">
      <actionSet
            label="%_UI_SimulationModelWizard_ActionSet_label"
            visible="true"
            id="org.opaeum.metamodels.simulation.simulation.presentation.SimulationActionBarContributorActionSet">
         <action
               label="%_UI_SimulationModelWizard_label"
               class="org.opaeum.metamodels.simulation.simulation.presentation.SimulationActionBarContributor$NewAction"
               menubarPath="file/new/additions"
               id="org.opaeum.metamodels.simulation.simulation.presentation.SimulationActionBarContributorNewAction"/>
      </actionSet>
   </extension>

   <extension point="org.eclipse.ui.editors">
      <editor
            id="org.opaeum.metamodels.simulation.simulation.presentation.SimulationEditorID"
            name="%_UI_SimulationEditor_label"
            icon="icons/full/obj16/SimulationModelFile.gif"
            extensions="simulation"
            class="org.opaeum.metamodels.simulation.simulation.presentation.SimulationEditor"
            contributorClass="org.opaeum.metamodels.simulation.simulation.presentation.SimulationActionBarContributor">
      </editor>
   </extension>

</plugin>
